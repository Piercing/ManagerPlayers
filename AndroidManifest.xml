<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="io.devspain"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="17"
        android:targetSdkVersion="17" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".activity.PlayersScreenActivity"
            android:label="@string/app_name" >
        </activity>
        <activity
            android:name=".activity.ShowScreenPlayersActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activity.PreferencesActivity"
            android:label="@string/title_activity_preferences" >
        </activity>
        <activity
            android:name=".activity.LoadPlayersActivity"
            android:label="@string/title_activity_management_players" >
        </activity>
        <activity
            android:name="io.devspain.activity.DeletePlayersActivity"
            android:label="@string/title_activity_delete_players" >
        </activity>
    </application>

</manifest>